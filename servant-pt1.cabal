category:            Web
extra-source-files:  CHANGELOG.md

common deps
  build-depends:       aeson >= 1.4.2.0
                     , attoparsec >= 0.13.2.2
                     , base ^>=4.12.0.0
                     , base-compat >= 0.10.5
                     , blaze-html
                     , blaze-markup >= 0.8.2.2
                     , bytestring >= 0.10.8.2
                     , containers
                     , directory >= 1.3.3.0
                     , dhall
                     , http-media >= 0.7.1.3
                     , katip
                     , lens
                     , lifted-base
                     , lucid
                     , mtl
                     , postgresql-simple
                     , postgresql-simple-migration
                     , say
                     , servant >= 0.15
                     , servant-server
                     , stm
                     , string-conversions >= 0.4.0.1
                     , text >= 1.2.3.1
                     , text-show
                     , time >= 1.8.0.2
                     , wai
                     , wai-cors
                     , warp
  ghc-options:        -Wall
  default-extensions:  DataKinds
                     , DeriveAnyClass
                     , DeriveGeneric
                     -- , DerivingStrategies
                     , DerivingVia
                     , FlexibleContexts
                     , GeneralizedNewtypeDeriving
                     , OverloadedStrings
                     , TypeOperators
  other-extensions:    QuasiQuotes
                     , TemplateHaskell

library
  import:              deps
  hs-source-dirs:      src
  exposed-modules:     Database
                     , Server
                     , Types
  default-language:    Haskell2010

executable servant-pt1
  import:              deps
  main-is:             Main.hs
  hs-source-dirs:      app
  build-depends:       servant-pt1
  default-language:    Haskell2010
